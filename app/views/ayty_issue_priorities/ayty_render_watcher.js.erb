<% unless @load_list_watcher.to_s == "true"%>
    $('#ayty_show_issues_watcher_list').toggle()
<% else %>


    if($('#ayty_show_issues_responsible_list').text().length == 0) {
        $('#ayty_show_issues_responsible_button').empty().append("<%= escape_javascript render :partial => "ayty_issue_priorities/ayty_button_responsible",
                                                                    :locals => {:user_id => @user_id,
                                                                                :ayty_issue_id_play => @ayty_issue_id_play,
                                                                                :load_list_responsible => true,
                                                                                :checked => false,
                                                                                :ayty_exclude_id_issue_priority => @ayty_exclude_id_issue_priority,
                                                                                :ayty_exclude_id_issue_watcher => @ayty_exclude_id_issue_watcher } %>")
    }


    if($('#ayty_show_time_tracker_pendings_list').text().length > 0) {
        if( $('#ayty_show_issues_watcher_list').text().length == 0 ) {
            $('#ayty_show_time_tracker_pendings_button').empty().append("<%= escape_javascript render :partial => "ayty_issue_priorities/ayty_button_time_tracker_pendings",
                                                                        :locals => {:user_id => @user_id,
                                                                                    :ayty_issue_id_play => @ayty_issue_id_play,
                                                                                    :load_list_time_tracker_pendings => true,
                                                                                    :checked => false,
                                                                                    :ayty_exclude_id_issue_priority => @ayty_exclude_id_issue_priority,
                                                                                    :ayty_exclude_id_issue_responsible => @ayty_exclude_id_issue_responsible,
                                                                                    :ayty_exclude_id_issue_watcher => @ayty_exclude_id_issue_watcher,
                                                                                    :ayty_outdated_content => true} %>")
        }
    }else{
        $('#ayty_show_time_tracker_pendings_button').empty().append("<%= escape_javascript render :partial => "ayty_issue_priorities/ayty_button_time_tracker_pendings",
                                                                    :locals => {:user_id => @user_id,
                                                                                :ayty_issue_id_play => @ayty_issue_id_play,
                                                                                :load_list_time_tracker_pendings => true,
                                                                                :checked => false,
                                                                                :ayty_exclude_id_issue_priority => @ayty_exclude_id_issue_priority,
                                                                                :ayty_exclude_id_issue_responsible => @ayty_exclude_id_issue_responsible,
                                                                                :ayty_exclude_id_issue_watcher => @ayty_exclude_id_issue_watcher,
                                                                                :ayty_outdated_content => false} %>")
    }

    $('#ayty_show_issues_watcher_button').empty().append("<%= escape_javascript render :partial => "ayty_issue_priorities/ayty_button_watcher",
                                                                :locals => {:user_id => nil,
                                                                            :ayty_issue_id_play => nil,
                                                                            :load_list_watcher => false,
                                                                            :checked => true,
                                                                            :ayty_exclude_id_issue_priority => nil,
                                                                            :ayty_exclude_id_issue_responsible => nil,
                                                                            :ayty_outdated_content => false} %>")
    $('#ayty_show_issues_watcher_list').empty().append("<%= escape_javascript render :partial => "ayty_issue_priorities/build_tables", :locals => {:table => @table_watcher} %>")

<% end %>